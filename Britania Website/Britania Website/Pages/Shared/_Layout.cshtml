<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Britania_Website</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Britania_Website.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="header">
            <h2>Britania</h2>
            <ul>
                <li>
                    <a asp-area="" asp-page="/Index">Home</a>
                </li>
                <li>
                    <a  asp-area="" asp-page="/About">About</a>
                </li>
                <li>
                    <a  asp-area="" asp-page="/Product">Product</a>
                </li>

                <li>
                    <a  asp-area="" asp-page="/Review">Review</a>
                </li>
                <li >
                    <a asp-area="" asp-page="/Contact">Contact</a>
                </li>
            </ul>
        </div>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>